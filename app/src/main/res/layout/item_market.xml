<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/normal_padding">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_market"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/short_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_padding"
        android:text="AQC"
        android:textColor="@color/titleTxtColor"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@+id/icon" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/quarter_padding"
        android:text="AoqiCoin"
        android:textColor="@color/optionTxtColor"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/short_name"
        app:layout_constraintTop_toBottomOf="@+id/short_name" />

    <TextView
        android:id="@+id/coin_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/half_padding"
        android:text="0.00"
        android:textColor="@color/titleTxtColor"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/coin_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/quarter_padding"
        android:text="ï¿¥0.00"
        android:textColor="@color/optionTxtColor"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/coin_number"
        app:layout_constraintTop_toBottomOf="@+id/coin_number" />

    <TextView
        android:id="@+id/gains"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_gains_label"
        android:paddingBottom="2dp"
        android:paddingLeft="@dimen/quarter_padding"
        android:paddingRight="@dimen/quarter_padding"
        android:paddingTop="2dp"
        tools:text="+0.82%"
        android:textColor="#333333"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/zore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_zore_label"
        android:paddingBottom="2dp"
        android:paddingLeft="@dimen/quarter_padding"
        android:paddingRight="@dimen/quarter_padding"
        android:paddingTop="2dp"
        tools:text="0.00%"
        android:textColor="#333333"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/drop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_drop_label"
        android:paddingBottom="2dp"
        android:paddingLeft="@dimen/quarter_padding"
        android:paddingRight="@dimen/quarter_padding"
        android:paddingTop="2dp"
        android:textColor="#333333"
        android:textSize="14sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="-4.76%" />
</android.support.constraint.ConstraintLayout>